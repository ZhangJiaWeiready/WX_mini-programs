/* pages/template/list-template.wxss */
.tmpContainer{
    display: flex;
    flex-direction: column;
    width: 100%;
    margin: 20rpx 0;
    padding: 20rpx 0;
    border-top: 1rpx solid #efefef;
    border-bottom: 1px solid #efefef;
}
.tmpContainer > .avatar_date{
    padding: 20rpx 0;
}
.tmpContainer > .avatar_date > image{
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle;
    margin-left: 20rpx;
    margin-right: 20rpx;
}
.tmpContainer > .avatar_date > text {
    vertical-align: middle;
    font-size: 32rpx;
}
.tmpContainer > .company {
    margin: 20rpx 0 20rpx 20rpx;
    font-size: 36rpx;
    font-weight: bold;
}
.tmpContainer > .tmp_img {
    width: 100%;
    height: 340rpx;
}
.tmpContainer > .content{
    font-size: 28rpx;
    text-indent: 28rpx;
    color: #333333;
    line-height: 50rpx;
}
.tmpContainer > .love_attention {
    padding-left: 20rpx;
}
.tmpContainer > .love_attention > text{
    font-size: 26rpx;
    vertical-align: middle;
    margin-right: 20rpx;
}
.tmpContainer > .love_attention > image{
    margin-right: 20rpx;
    vertical-align: middle;
    width: 32rpx;
    height: 32rpx;
    border-radius: 50%;
}
