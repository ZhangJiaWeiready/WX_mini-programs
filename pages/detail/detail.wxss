/* pages/detail/detail.wxss */.detailContainer{    width: 100%;    display: flex;    flex-direction: column;}.detailContainer > .backImg{    width: 100%;    height: 400rpx;}.detailContainer > .musicImg {    position: absolute;    left: 50%;    top: 170rpx;    margin-left: -30rpx;    width: 60rpx;    height: 60rpx;}.detailContainer > .avarar_msg{    padding: 20rpx;}.detailContainer > .avarar_msg > image {    width: 60rpx;    height: 60rpx;    vertical-align: middle;}.detailContainer > .avarar_msg > text {    font-size: 30rpx;    vertical-align: middle;    margin-left: 10rpx;}.detailContainer > .title{    font-size: 36rpx;    font-weight: bold;    margin-left: 20rpx;}.detailContainer > .collection_line {    position: relative;}.detailContainer > .collection_line > .collection {    float: right;    margin-right: 60rpx;}.detailContainer > .collection_line > .collection > image {    width: 90rpx;    height: 90rpx;    margin-right: 20rpx;}.detailContainer > .collection_line > .line {    width: 90%;    position: absolute;    left: 5%;    top: 45rpx;    height: 1px;    background: #eeeeee;    z-index: -1;}.detailContainer > button {    width: 300rpx;    height: 80rpx;    line-height: 80rpx;}.content {    font-size: 32rpx;    color: #666;    text-indent: 32rpx;    line-height: 50rpx;}